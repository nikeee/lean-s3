{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2024",
    "lib": [
      "es2024"
    ],

    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "noImplicitOverride": true,

    "allowJs": true,
    "checkJs": false, // tsgo checks node_modules dependencies otherwise. See: https://github.com/microsoft/typescript-go/issues/931
    "strict": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ],
    "excludePrivate": true,
    "excludeInternal": true,
    "out": "docs"
  }
}
