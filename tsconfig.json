{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2024",
    "lib": [
      "es2024"
    ],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/index.d.ts"
    ],
    "excludePrivate": true,
    "out": "docs"
  }
}
